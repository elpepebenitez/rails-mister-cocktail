<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=749&q=80);">
  <div class="container">
    <h1>Get drunk <strong>with style</strong></h1>
    <%= link_to "Add a cocktail", new_cocktail_path, :class => "btn btn-success" %>
  </div>
</div>

<div class="cards" style="justify-content: center; width: 600px; margin: 0 auto; padding-bottom: 100px;">
  <% @cocktails.each do |cocktail| %>

    <% photo = ["https://images.unsplash.com/photo-1563223771-5fe4038fbfc9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80","https://images.unsplash.com/photo-1582837611539-e3020079eab6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=394&q=80","https://images.unsplash.com/photo-1551538827-9c037cb4f32a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=401&q=80","https://images.unsplash.com/photo-1586338211598-e2d64cf97e28?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=334&q=80"].sample %>

    <%= link_to cocktail_path(cocktail) do  %>
      <div class="card-product">
        <img src=<%=photo%> />
        <div class="card-product-infos">
          <h2><%= link_to cocktail.name, cocktail_path(cocktail)  %></h2>
          <% cocktail.doses.each do |dose| %>
            <p><%= dose.description %> <%= dose.ingredient.name  %></p>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


