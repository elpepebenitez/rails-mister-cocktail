<h2><%= @cocktail.name %></h2>


<p>Doses</p>


<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure you want to delete #{dose.ingredient.name}?"} do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </li>
  <% end %>
</ul>



<%= link_to "Create a dose", new_cocktail_dose_path(@cocktail) %>
